<Window x:Class="RestaurantGUI.admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora" Height="450" Width="800" Background="#2F4F4F">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="34,62,0,-42">
            <Button Name="btnDane" Content="Dane" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <Button Name="btnPracownik" Content="Pracownik" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <Button Name="btnKlienci" Content="Klienci" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <Button Name="btnKonta" Content="Konta" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>

        <ListBox Name="lstDane" Width="500" Height="250" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="211,74,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
            <Button x:Name="btnDodaj" Content="Dodaj" Width="100" Height="40" Background="#0099FF" Foreground="White" FontSize="16"/>
            <Button x:Name="btnUsun" Content="Usuń" Width="100" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="10"/>
            <Button x:Name="btnEdytuj" Content="Edytuj" Width="100" Height="40" Background="#0099FF" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>

