<Window x:Class="RestaurantGUI.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora" Height="450" Width="800" Background="#2F4F4F">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="30,50,0,0">
            <Button Name="btnDane" Content="Dane" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <Button Name="btnPracownik" Content="Pracownik" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <Button Name="btnKlienci" Content="Klienci" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <Button Name="btnKonta" Content="Konta" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>

        <ListBox Name="lstDane" Width="550" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="211,25,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="215,340,0,0" Width="546">
            <Button x:Name="btnDodaj" Content="Dodaj" Width="100" Height="40" Background="LimeGreen" Foreground="White" FontSize="16"/>
            <Button x:Name="btnUsun" Content="Usuń" Width="100" Height="40" Background="red" Foreground="White" FontSize="16" Margin="230,0,0,0" HorizontalAlignment="Left"/>
            <Button x:Name="btnEdytuj" Content="Edytuj" Width="100" Height="40" Background="#0099FF" Foreground="White" FontSize="16" Margin="15,0,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>

