<Window x:Class="RestaurantGUI.OknoKelner"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Zamówień" Height="510" Width="800" Background="#2F4F4F">
    <Grid Margin="20">
        <ListBox Name="lstZamowienia" Width="580" Height="400" HorizontalAlignment="Right" VerticalAlignment="Top" Background="White"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150">
            <ComboBox Name="cmbStatus" Width="150" Height="30" FontSize="15">
            </ComboBox>
            <Button Name="btnZmienStan" Content="Zmień stan" Width="150" Height="35" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>

            <StackPanel Orientation="Vertical" Margin="0,60,0,0"/>
        </StackPanel>
        <Button x:Name="btnDodaj" Content="Dodaj Zamówienie" Background="LimeGreen" Foreground="White" FontSize="16" Margin="0,160,0,0" Width="150" Height="35" HorizontalAlignment="Left"/>
        <Button Content="Wróć" HorizontalAlignment="Left" Background="White" Foreground="Black" Margin="0,405,0,0" VerticalAlignment="Top" Click="EscapeButtonClicked" Width="55" Height="25"/>
    </Grid>
</Window>
