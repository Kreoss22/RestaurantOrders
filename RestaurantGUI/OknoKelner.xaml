<Window x:Class="RestaurantGUI.OknoKelner"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Zamówień" Height="500" Width="800" Background="#2F4F4F">
    <Grid Margin="20">
        <ListBox Name="lstZamowienia" Width="596" Height="400" HorizontalAlignment="Right" VerticalAlignment="Top" Background="White"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144">
            <ComboBox Name="cmbStatus" Width="200" Height="30">
            </ComboBox>
            <Button Name="btnZmienStan" Content="Zmień stan" Width="142" Height="33" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,10,0,0"/>

            <StackPanel Orientation="Vertical" Margin="0,60,0,0"/>
        </StackPanel>
        <Button x:Name="btnDodaj" Content="Dodaj" Background="#0099FF" Foreground="White" FontSize="16" Margin="0,369,616,44"/>

    </Grid>
</Window>
