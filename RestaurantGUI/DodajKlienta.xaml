<Window x:Class="RestaurantGUI.DodajKlienta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Klienta" Height="430" Width="500" Background="#2F4F4F">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Email:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="txtEmail" Height="30"/>

            <TextBlock Text="Hasło:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtHaslo" Height="30"/>

            <TextBlock Text="Imie:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtImie" Height="30"/>

            <TextBlock Text="Nazwisko:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNazwisko" Height="30"/>

            <TextBlock Text="Numer telefonu:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNrTel" Height="30"/>
            
        </StackPanel>
        <Button x:Name="btnDodajPracownika" Content="Dodaj" Width="150" Height="40" Background="#0099FF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="40,315,0,0" Click="DodajBtnClicked"/>
        <Button x:Name="btnAnuluj" Content="Anuluj" Width="150" Height="40" Background="Red" Foreground="White" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,315,40,0" Click="AnulujBtnClicked" />
    </Grid>
</Window>
