<Window x:Class="RestaurantGUI.DodajKlienta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Klienta" Height="400" Width="500" Background="#2F4F4F">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Imię:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="txtImie" Height="30"/>

            <TextBlock Text="Nazwisko:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNazwisko" Height="30"/>

            <TextBlock Text="Email:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail" Height="30"/>

            <TextBlock Text="Numer Telefonu:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNrTel" Height="30"/>

            <Button x:Name="btnDodajKlienta" Content="Dodaj" Width="150" Height="40" Background="#0099FF" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
