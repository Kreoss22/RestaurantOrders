<Window x:Class="RestaurantGUI.DodajPracownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Pracownika" Height="530" Width="500" Background="#2F4F4F">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Imię:" Foreground="White" FontSize="16"/>
            <TextBox x:Name="txtImie" Height="30"/>

            <TextBlock Text="Nazwisko:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNazwisko" Height="30"/>

            <TextBlock Text="Email:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail" Height="30"/>

            <TextBlock Text="Numer Telefonu:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtNrTel" Height="30"/>

            <TextBlock Text="Pozycja:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPozycja" Height="30"/>

            <TextBlock Text="PESEL:" Foreground="White" FontSize="16" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPesel" Height="30"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Czy jest kucharzem:" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                <CheckBox x:Name="chkCzyKucharz" Margin="10,10,0,0" Height="25" Width="25"/>
            </StackPanel>

        </StackPanel>
        <Button x:Name="btnDodajPracownika" Content="Dodaj" Width="150" Height="40" Background="#0099FF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="40,410,0,0" Click="DodajBtnClicked"/>
        <Button x:Name="btnAnuluj" Content="Anuluj" Width="150" Height="40" Background="Red" Foreground="White" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,410,40,0" Click="AnulujBtnClicked" />
    </Grid>
</Window>