<Window x:Class="RestaurantGUI.DodajZamowienie"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Złóż zamówienie" Height="500" Width="800" Background="#2F4F4F">
    <Grid Margin="216,20,20,20">
        <ListBox Name="lstZamowienia" Width="488" Height="400" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="32,0,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <TextBox Name="txtPuste" Width="42" Height="30"/>
            <Button Name="btnDodaj" Content="Dodaj" Width="100" Height="30" Background="#0099FF" Foreground="White" FontSize="14" Margin="10"/>
            <Label Content="Napiwek" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox Name="txtNapiwek" Width="51" Height="30"/>
            <Button Name="btnDodajZamowienie" Content="Dodaj zamówienie" Width="186" Height="30" Background="#0099FF" Foreground="White" FontSize="14" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>