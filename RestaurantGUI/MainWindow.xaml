<Window x:Class="RestaurantGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DarkSlateGray">
    <Grid>
        <Label x:Name="RestaurantName" Content="Restauracja *Nazwa*" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="30" Foreground="White"/>
        <Label Content="Login:" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
        <TextBox x:Name="loginTb" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" Height="30" FontSize="18"/>
        <Label Content="Hasło:" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
        <TextBox x:Name="passwordTb" HorizontalAlignment="Center" Margin="0,220,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" Height="30" FontSize="18"/>
        <Button x:Name="SignInBtn" Content="Zaloguj się" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Background="DeepSkyBlue" Foreground="White" BorderBrush="White" BorderThickness="2" Width="150"
                Height="50" FontSize="20"/>
        <Button x:Name="SignUpBtn" Content="Zarejestruj się" HorizontalAlignment="Center" Margin="0,340,0,0" VerticalAlignment="Top" Background="DeepSkyBlue" Foreground="White" BorderBrush="White" BorderThickness="2" Width="100"
        Height="30" FontSize="15"/>
    </Grid>
</Window>
